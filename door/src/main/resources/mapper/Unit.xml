<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dnk.clever.door.dao.UnitDao">

	<sql id="entity">unit</sql>
	<sql id="id">id</sql>
	<sql id="column">id, buildId, name, code, createTime, updateTime</sql>
	<sql id="search"></sql>

	<insert id="save">
		INSERT INTO
		<include refid="entity"/>
		(<include refid="column"/>)
		VALUES
		(NULL, #{buildId}, #{name}, #{code}, NULL, NULL)
	</insert>

	<insert id="saves">
		INSERT INTO
		<include refid="entity"/>
		(<include refid="column"/>)
		VALUES
		<foreach collection="list" item="entity" separator=",">
			(NULL, #{buildId}, #{name}, #{code}, NULL, NULL)
		</foreach>
	</insert>

	<delete id="deleteById">
		DELETE FROM
		<include refid="entity"/>
		WHERE
		<include refid="id"/>
		= #{id}
	</delete>

	<delete id="deleteByEntity">
		DELETE FROM
		<include refid="entity"/>
		WHERE
		<include refid="id"/>
		= #{id}
	</delete>

	<delete id="deleteByIds">
		DELETE FROM
		<include refid="entity"/>
		WHERE
		<include refid="id"/>
		IN
		<foreach collection="array" item="id" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

	<delete id="deleteByEntities">
		DELETE FROM
		<include refid="entity"/>
		WHERE
		<include refid="id"/>
		IN
		<foreach collection="list" item="entity" open="(" separator="," close=")">
			#{entity.id}
		</foreach>
	</delete>

	<update id="update">
		UPDATE
		<include refid="entity"/>
		SET
		buildId = #{buildId}, name = #{name}, code = #{code}, updateTime = #{updateTime}
		WHERE
		<include refid="id"/>
		= #{id}
	</update>

	<select id="findById" resultType="Unit">
		SELECT * FROM
		<include refid="entity"/>
		WHERE
		<include refid="id"/>
		= #{id}
	</select>

	<select id="findAll" resultType="Unit">
		SELECT * FROM
		<include refid="entity"/>
		ORDER BY
		<include refid="id"/>
		DESC
	</select>

	<select id="findInterval" resultType="Unit">
		SELECT * FROM
		<include refid="entity"/>
		ORDER BY
		<include refid="id"/>
		DESC
		limit #{offset}, #{limit}
	</select>

	<select id="count" resultType="int">
		SELECT COUNT(*) FROM
		<include refid="entity"/>
	</select>

	<select id="findList" resultType="map">
		SELECT
		unit.*, build.name as build
		FROM
		unit JOIN build ON unit.buildId = build.id
		<where>
			<if test="build != null and build != ''">
				build.name LIKE "%"#{build}"%"
			</if>
			<if test="unit != null and unit != ''">
				AND unit.name LIKE "%"#{unit}"%"
			</if>
		</where>
		ORDER BY
		<include refid="id"/>
		DESC
		<if test="offset >= 0 and limit > 0">
			limit #{offset}, #{limit}
		</if>
	</select>

	<!--TODO-->
	<select id="countList" resultType="int">
		SELECT COUNT(*) FROM
		unit JOIN build ON unit.buildId = build.id
		<where>
			<if test="build != null and build != ''">
				AND build.name LIKE "%"#{build}"%"
			</if>
			<if test="unit != null and unit != ''">
				AND unit.name LIKE "%"#{unit}"%"
			</if>
		</where>
	</select>
</mapper>
